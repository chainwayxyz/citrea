FROM ubuntu:22.04

RUN apt update && apt -y install curl gcc cpp cmake clang llvm && apt -y autoremove && apt clean && rm -rf /var/lib/apt/lists/*
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --default-toolchain=1.79.0
RUN /root/.cargo/bin/cargo +1.79.0 install --version 1.7.0 cargo-binstall
RUN /root/.cargo/bin/cargo +1.79.0 binstall --version 1.0.5 -y cargo-risczero
RUN /root/.cargo/bin/cargo +1.79.0 risczero install --version r0.1.79.0
COPY . .
WORKDIR /citrea
RUN /root/.cargo/bin/cargo +1.79.0 build --release